<% content_for :js do%>
<script type="text/javascript" charset="utf-8">
	$("#slideshow_1>")
	.cycle({ 
	    fx:     'fade', 
	    speed:  1500, 
	    timeout: 7000, 
	    pager:  '#slideshow_1_nav',
		pause:   1
	});
</script>
<%end%>
<div id="slideshow_1_nav" class="slideshow_nav"></div>
<div id="slideshow_1" class="slideshow margin-bottom-30">
	<%= image_tag('front/d1.png', :class => "slideshow")%>
	<%= image_tag('front/d2.png')%>
	<%= image_tag('front/d3.png')%>
	<%= image_tag('front/d4.png')%>
</div>