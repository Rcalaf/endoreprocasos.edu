
<div class="content_top">
<%=form_for @owner,:url => (params[:action] == "new" ? new_page_url : edit_page_url(@owner)) do |f|%>
	<div class="input_holder_medium">
		<%= f.text_field :title, :placeholder => "Título", :class => "header_edit"%>
	</div>
	<div class="input_holder_short">
		<%= f.text_field :menu_title, :placeholder => "Título menú", :class => "header_edit"%>
	</div>
	<%= f.submit "Guardar", :class => "submit_button general_save"%>
<%end%>
</div>	
