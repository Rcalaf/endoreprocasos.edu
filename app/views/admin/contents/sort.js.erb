<%if flash[:content].nil?%>
$("#sort-contents").prepend("<%= escape_javascript(render(:partial => 'admin/shared/error_notification',:object => flash[:content])) %>");
$('.notification').slideDown(1000);
window.scrollTo(0,0);
setTimeout(function(){$('.notification').slideUp(1000,function(){$(".notification").remove(); })},5000);
<%else%>
$("#sort-contents").prepend("<%= escape_javascript(render(:partial => 'admin/shared/success_notification', :object => flash[:content])) %>");
$('.notification').slideDown(1000);
window.scrollTo(0,0);
setTimeout(function(){$('.notification').slideUp(1000,function(){$(".notification").remove(); })},5000);
<%end%>