
<div class="add_content">
<%= form_for @content, :url => new_content_url(@owner.class.to_s,@owner.id), :html => {:multipart => true} do |f|%>
	<p class="title">Nuevo contenido</p>
	<ul class="content_menu add_content_menu">
		<li><a id="text" class="active">text</a></li>
		<li><a id="image">image</a></li>
	    <li><a id="image-text">image with text</a></li>
		<li><a id="embed">embed code</a></li>
	</ul>
	<span class="clear"></span>
	<div class="new-text">
		<%=f.text_area :text, :class => "edit_main", :rows => 8%>
	</div>		
	<span class="clear"></span>				
	<div class="new-image" style="display: none;">
		<%=f.file_field :image ,:class => "input_holder_newimage"%>
	</div>		
	<span class="clear"></span>	
	<div class="new-image-text" style="display: none;">
		<%=f.file_field :image ,:class => "input_holder_newimage"%>
		<%=f.text_area :image_text, :class => "edit_main", :rows => 8%>
	</div>		
	<span class="clear"></span>			
	<div class="new-embed" style="display: none;">
		<%=f.text_area :embed_code, :class => "edit_main", :rows => 8%>
	</div>	
	<%= f.hidden_field :content_type,:value => 'text'%>
	<%= f.hidden_field :page_id%>
	<%= f.hidden_field :cas_id%>
	<%= f.hidden_field :user_id%>
	<%= f.submit "contenido",:class=>"submit_button n_content"%>
	<%end%>
</div>
