<div class="content_box">
<%if page_content.content_type == "text"%>
	<%= raw RDiscount.new(page_content.text).to_html%>
<%elsif page_content.content_type == "embed"%>
	<p class="embed"><%=raw RDiscount.new( page_content.embed_code).to_html%></p>
<%elsif page_content.content_type == "image"%>
	<%= image_tag page_content.image.url(:page)%>
<%elsif page_content.content_type == "image-text"%>
		<div class="small-text">
		<%=image_tag(page_content.image.url(:small))%>
		<%= raw RDiscount.new(page_content.image_text).to_html%>
		</div>
		<div class="clear"></div>
<%end%>
</div>
